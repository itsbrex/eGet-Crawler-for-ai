# API Configuration
DEBUG=false
LOG_LEVEL=INFO
PORT=8000
WORKERS=4

# Security
SECRET_KEY=your-secure-key-here  # Required for API authentication when enabled
API_KEY=your-api-key-here        # For rate limiting and API access control

# Scraper Settings
MAX_CONCURRENT_SCRAPES=5
TIMEOUT=30
SCREENSHOT_QUALITY=80

# Redis Configuration
REDIS_URL=redis://redis:6379
CACHE_TTL=86400
CACHE_ENABLED=true

# Rate Limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600  # Per hour

# Monitoring
PROMETHEUS_ENABLED=true